#include <iostream>

int main() {
    int size = 5;
    int myArray[size] = {1, 2, 3, 4, 5};

    // Print the elements of the array
    std::cout << "Original array:\n";
    for(int i = 0; i < size; i++) {
        std::cout << myArray[i] << " ";
    }
    std::cout << "\n";

    // Update an element of the array
    int indexToUpdate = 2;
    int newValue = 10;
    myArray[indexToUpdate] = newValue;

    // Print the updated array
    std::cout << "Updated array:\n";
    for(int i = 0; i < size; i++) {
        std::cout << myArray[i] << " ";
    }
    std::cout << "\n";

    // Find the sum of all elements in the array
    int sum = 0;
    for(int i = 0; i < size; i++) {
        sum += myArray[i];
    }
    std::cout << "Sum of all elements in the array: " << sum << "\n";

    return 0;
}
